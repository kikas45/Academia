<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".About">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/about_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="#1A191B"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/black"
                        android:src="@drawable/ic_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/black"
                        android:gravity="center"
                        android:text="Powell Marzymus"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black"
                        android:gravity="center"
                        android:text="Software/Application Developer"
                        android:textColor="#c4c4c4"
                        android:textSize="15sp" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25sp"
                        android:background="@android:color/black"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/github"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="30dp"
                            android:background="@android:color/black"
                            android:onClick="openGit"
                            android:src="@drawable/github" />

                        <ImageView
                            android:id="@+id/insta"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="30dp"
                            android:background="@android:color/black"
                            android:onClick="openInsta"
                            android:src="@drawable/instagram"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/twitter"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="30dp"
                            android:background="@android:color/black"
                            android:onClick="openTwitter"
                            android:src="@drawable/twitter"
                            tools:ignore="ContentDescription,UsingOnClickInXml" />

                        <ImageView
                            android:id="@+id/facebook"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="30dp"
                            android:background="@android:color/black"
                            android:onClick="openFacebook"
                            android:src="@drawable/ic_facebook"
                            tools:ignore="UsingOnClickInXml" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Credits"
                android:textColor="#371640"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:text="@string/credits"
                android:textColor="#290909"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: v1.0.0"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>