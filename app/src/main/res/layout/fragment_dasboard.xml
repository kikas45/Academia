<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DashBoard">


    <include
        android:id="@+id/toolabr1"
        layout="@layout/my_toolbar" />



    <ScrollView


        android:layout_width="409dp"
        android:layout_height="673dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:paddingBottom="90dp"
        android:foregroundGravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolabr1"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >


            <com.smarteist.autoimageslider.SliderView


               android:layout_marginTop="25dp"
                android:id="@+id/slider"
                android:layout_width="326dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/loading"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:paddingTop="20dp">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:text="Feeds"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.158"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.074"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/button"
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:background="@drawable/news"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.171"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.711" />

                <ImageView
                    android:id="@+id/button14"
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:background="@drawable/explore"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.863"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.694" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/textddView"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:text="Resources"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.193"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.074"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/ccbutton"
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:background="@drawable/news"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.171"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.711" />

                <ImageView
                    android:id="@+id/buttcon14"
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:background="@drawable/explore"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.863"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.694" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <!--Another_image-->


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
